{% extends 'base.html.twig' %}

{% block title %}Mon Espace - Stadium Xchange{% endblock %}

{% block stylesheets %}
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
<div class="bg-gray-100 min-h-screen">
    <header class="bg-black text-white py-4 shadow-md fixed top-0 w-full z-50">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <div class="text-lg font-bold">Bienvenue, {{ app.user.firstname }} {{ app.user.lastname }}</div>
            <a href="{{ path('HomePage') }}" class="logo">
                <img src="{{ asset('images/logo.png') }}" alt="Stadium Xchange Logo" class="h-12">
            </a>
            <a href="{{ path('logout') }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Déconnexion</a>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8 mt-16">
        <section class="space-y-8">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold mb-4">Mes tickets en vente</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for ticket in myTicketsForSale %}
                        <div class="bg-gray-50 rounded-lg p-4 shadow">
                            <p class="font-bold text-lg mb-2">{{ ticket.homeTeam }} vs {{ ticket.awayTeam }}</p>
                            <p><strong>Date :</strong> {{ ticket.dateTime|date('d/m/Y H:i') }}</p>
                            <p><strong>Prix :</strong> {{ ticket.price }} €</p>
                            <p><strong>ID :</strong> {{ ticket.id }}</p>
                            <button class="mt-2 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded delete-button" data-type="ticket" data-id="{{ ticket.id }}" data-token="{{ csrf_token('delete' ~ ticket.id) }}">Supprimer</button>
                        <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="mt-2 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-block">Éditer</a>
                        </div>
                    {% else %}
                        <p class="col-span-full text-gray-600 italic">Vous n'avez pas de tickets en vente.</p>
                    {% endfor %}
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold mb-4">Mes ventes</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for selling in mySoldTickets %}
                        <div class="bg-gray-50 rounded-lg p-4 shadow">
                            <p class="font-bold text-lg mb-2">{{ selling.ticket.homeTeam }} vs {{ selling.ticket.awayTeam }}</p>
                            <p><strong>Vendu le :</strong> {{ selling.date|date('d/m/Y H:i') }}</p>
                            <p><strong>Prix :</strong> {{ selling.ticket.price }} €</p>
                            <p><strong>ID :</strong> {{ selling.ticket.id }}</p>
                        </div>
                    {% else %}
                        <p class="col-span-full text-gray-600 italic">Vous n'avez pas encore vendu de tickets.</p>
                    {% endfor %}
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold mb-4">Mes achats</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for buying in myBoughtTickets %}
                        <div class="bg-gray-50 rounded-lg p-4 shadow">
                            <p class="font-bold text-lg mb-2">{{ buying.ticket.homeTeam }} vs {{ buying.ticket.awayTeam }}</p>
                            <p><strong>Acheté le :</strong> {{ buying.date|date('d/m/Y H:i') }}</p>
                            <p><strong>Prix :</strong> {{ buying.ticket.price }} €</p>
                            <p><strong>Acheté par :</strong> {{ buying.purchaser.firstname}} {{ buying.purchaser.lastname}} </p>
                            <p><strong>ID ticket :</strong> {{ buying.ticket.id }}</p>
                        </div>
                    {% else %}
                        <p class="col-span-full text-gray-600 italic">Vous n'avez pas encore acheté de tickets.</p>
                    {% endfor %}
                 {# Débogage Twig : #}
                  {% dump(myBoughtTickets) %}
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold mb-4">Mes Cartes Bancaires</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for card in myCards %}
                        <div class="bg-gray-50 rounded-lg p-4 shadow">
                            <p><strong>Numéro :</strong> **** **** **** {{ card.cardNumber|slice(-4) }}</p>
                            <p><strong>Expire le :</strong> {{ card.expirationDate|date('m/Y') }}</p>
                            <p><strong>Titulaire :</strong> {{ card.firstname }} {{ card.lastname }}</p>
                            <button class="mt-2 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded delete-button" data-type="card" data-id="{{ card.id }}" data-token="{{ csrf_token('delete' ~ card.id) }}">Supprimer</button>
                        </div>
                    {% else %}
                        <p class="col-span-full text-gray-600 italic">Vous n'avez pas encore enregistré de carte bancaire.</p>
                    {% endfor %}
                </div>
                <a href="{{ path('app_card_details_new') }}" class="mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Ajouter une carte</a>
            </div>
        </section>
    </main>

    <div id="confirmModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center">
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-xl font-bold mb-4">Confirmation de suppression</h2>
            <p class="mb-4">Êtes-vous sûr de vouloir supprimer cet élément ?</p>
            <form id="deleteForm" method="post">
                <input type="hidden" name="_token" value="">
                <div class="flex justify-end space-x-4">
                    <button type="submit" id="confirmDelete" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Confirmer</button>
                    <button type="button" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded cancel-button">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('confirmModal');
    const deleteForm = document.getElementById('deleteForm');
    const csrfTokenField = deleteForm.querySelector('input[name="_token"]');

    function openModal(id, type, csrfToken) {
        deleteForm.action = `/${type}/${id}`;
        csrfTokenField.value = csrfToken;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }

    function closeModal() {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }

    // Gestion des boutons de suppression
    document.querySelectorAll('.delete-button').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();
            const id = this.getAttribute('data-id');
            const type = this.getAttribute('data-type');
            const csrfToken = this.getAttribute('data-token');

            openModal(id, type, csrfToken);
        });
    });

    // Gestion du bouton d'annulation
    document.querySelector('.cancel-button').addEventListener('click', closeModal);

    // Fermer la modal si on clique en dehors
    window.onclick = function(event) {
        if (event.target == modal) {
            closeModal();
        }
    };
});
</script>
{% endblock %}
