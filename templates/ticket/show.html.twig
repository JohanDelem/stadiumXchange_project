{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>HomeTeam</th>
                <td>{{ ticket.homeTeam }}</td>
            </tr>
            <tr>
                <th>AwayTeam</th>
                <td>{{ ticket.awayTeam }}</td>
            </tr>
            <tr>
                <th>DateTime</th>
                <td>{{ ticket.dateTime ? ticket.dateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ticket.price }}</td>
            </tr>
            <tr>
                <th>Stadium</th>
                <td>{{ ticket.stadium }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ ticket.state }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">back to list</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
