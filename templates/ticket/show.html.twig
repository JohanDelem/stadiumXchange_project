{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ticketDetail.css') }}">
{% endblock %}
{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr> #}
            <tr>
                <th>Equipe à domicile</th>
                <td>{{ ticket.homeTeam }}</td>
            </tr>
            <tr>
                <th></th>
                <td>VS</td>
            </tr>

            <tr>
                <th>Equipe à l'extérieur</th>
                <td>{{ ticket.awayTeam }}</td>
            </tr>
            <tr>
                <th>Date et heure</th>
                <td>{{ ticket.dateTime ? ticket.dateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ ticket.price }} euros</td>
            </tr>
            <tr>
                <th>Stade</th>
                <td>{{ ticket.stadium }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{% if ticket.owner %}
                        <p>{{ ticket.owner.lastname }} {{ ticket.owner.firstname }}</p>
                    {% else %}
                        <p>Inconnu</p>
                    {% endif %}</td>
            </tr>
        </tbody>
    </table>
<a href="{{ path('app_ticket_buy', {id: ticket.id}) }}">Acheter</a>
    {# <a href="{{ path('app_ticket_index') }}">back to list</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }} #}
{% endblock %}
