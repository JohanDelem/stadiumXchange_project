<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <title>Stadium Xchange - Accueil</title>
</head>

<body>
    <header class="site-header">
        <div class="container header-container">
            <a href="{{ path('app_ticket_new') }}" class="btn btn-sell-ticket">Vendre un billet</a>
            <a href="{{ path('HomePage') }}" class="logo">
                <img src="{{ asset('images/logo.png') }}" alt="Stadium Xchange Logo">
            </a>
            <nav class="user-nav">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('mySpace') }}" class="btn btn-primary">Mon compte</a>
                    <a href="{{ path('logout') }}" class="btn btn-secondary">Se déconnecter</a>
                {% else %}
                    <a href="{{ path('login') }}" class="btn btn-primary">Se connecter</a>
                    <a href="{{ path('register') }}" class="btn btn-secondary">S'inscrire</a>
                {% endif %}
            </nav>
        </div>
    </header>

    <main>
        <section class="search-section">
            <div class="container">
                <form action="#" method="GET" class="search-form">
                    <input type="text" name="query" class="search-input" placeholder="Rechercher un match, une équipe...">
                    <button type="submit" class="btn btn-search">Rechercher</button>
                </form>
            </div>
        </section>

        <section class="tickets-section">
            <div class="container">
                <h1 class="section-title">Billets Disponibles</h1>
                <div class="tickets-grid">
                    {% for ticket in tickets %}
                        <div class="ticket-card">
                            <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="ticket-link">
                                <div class="ticket-image">
                                    {% if ticket.competition == 'ligue 1' %}
                                        <img src="{{ asset('images/ligue1.jpg') }}" alt="Ligue 1">
                                    {% elseif ticket.competition == 'Ligue des Champions' %}
                                        <img src="{{ asset('images/ucl.jpg') }}" alt="UEFA Champions League">
                                    {% endif %}
                                </div>
                                <div class="ticket-header">
                                    <div class="team-match">
                                        <img src="{{teamsLogo[ticket.homeTeam]|default()}}" alt="{{ ticket.homeTeam }}" class="team-logo">
                                        <span>{{ ticket.homeTeam }}</span>
                                        <span class="vs">vs</span>
                                        <span>{{ ticket.awayTeam }}</span>
                                        <img src="{{teamsLogo[ticket.awayTeam]|default()}}" alt="{{ ticket.awayTeam }}" class="team-logo">
                                    </div>
                                </div>
                                <div class="ticket-body">
                                    <p><strong>Date et Heure :</strong> {{ ticket.dateTime|date('d/m/Y H:i') }}</p>
                                    <p><strong>Stade :</strong> {{ ticket.stadium }}</p>
                                    <p class="ticket-price"><strong>Prix :</strong> {{ ticket.price }} €</p>
                                    <p><strong>Vendeur :</strong> {% if ticket.owner %} {{ ticket.owner.lastname }} {{ ticket.owner.firstname }} {% else %} Inconnu {% endif %}</p>
                                    <p><strong>Compétition :</strong> {{ ticket.competition }}</p>
                                </div>
                            </a>
                        </div>
                    {% else %}
                        <p class="no-tickets">Aucun billet n'est disponible pour le moment.</p>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; 2024 Stadium Xchange - Tous droits réservés.</p>
        </div>
    </footer>
</body>

</html>